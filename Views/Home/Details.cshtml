@model Kategori
@{
    ViewData["Title"] = "Detail Kategori";
}

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Tipe</dt>
                    <dd class="col-sm-9">@Model.Tipe</dd>

                    <dt class="col-sm-3">Nama</dt>
                    <dd class="col-sm-9">@Model.Nama</dd>

                    <dt class="col-sm-3">Deskripsi</dt>
                    <dd class="col-sm-9">@Model.Deskripsi</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Model.Status</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Kembali</a>
            </div>
        </div>
    </div>
</div>