@{
    Layout = "../Shared/LayoutLanding.cshtml";
    ViewData["Title"] = "halaman kategori";
}

@model List<dotnet_mvc_first_app.Models.Kategori>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- Tambah Data -->
                <div class="mb-3">
                    <a asp-action="Create" class="btn btn-primary">+ Tambah Kategori</a>
                </div>

                <!-- Card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Data Kategori</h3>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tipe</th>
                                    <th>Nama</th>
                                    <th>Deskripsi</th>
                                    <th>Status</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Tipe</td>
                                        <td>@item.Nama</td>
                                        <td>@item.Deskripsi</td>
                                        <td>@item.Status</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detail</a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

